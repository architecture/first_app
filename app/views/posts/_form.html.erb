<%= form_for @post do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :posted_date %><br />
    <%= f.date_select :posted_date %>
  </p>
  <p><%= f.submit %></p>
<% end %>
